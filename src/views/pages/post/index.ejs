<div id="posts-container">
  <% for(var i = 0; i < posts.length; i++) { %>
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">
        <a
          class="link-dark link-underline link-underline-opacity-0 link-underline-opacity-100-hover"
          href="/post/<%= posts[i]._id%>"
        >
          <%= posts[i].title%>
        </a>
      </h5>
      <p class="card-text"><%- posts[i].body%></p>
      <a href="/post/<%= posts[i]._id%>" class="btn btn-light">More</a>
    </div>
  </div>
  <% } %>
</div>
